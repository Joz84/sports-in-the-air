<%= cl_image_tag @event.sport.photo.path %>
<h1><%= @event.name %></h1>
<p><%= @event.description %></p>

<%= link_to "Edit", edit_event_path(@event) %>
<%= link_to "Delete", event_path(@event), method: "delete", data: { confirm: "Are you sure SURE?" } %>

<%= @event.number_of_players %>

<% @event.participations.each do |participant|%>
  <%= participant.user.first_name %>
  <%= participant.user.last_name %>

  <p>--</p>

  <%= participant.status %>
<% end %>

<%= simple_form_for([@event, @participant]) do |f| %>
  <%= f.error_notification %>

  <%= f.button :submit, "Participate"  %>
<% end %>

<div id="map" style="width: 100%; height: 500px;">
  <% content_for(:after_js) do %>
    <script>
      $(document).ready(function() {
        var handler = Gmaps.build('Google');
        handler.buildMap({ internal: { id: 'map' } }, function() {
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          if (markers.length == 0) {
            handler.getMap().setZoom(2);
          } else if (markers.length == 1) {
            handler.getMap().setZoom(15);
          }
        });
      });
    </script>
  <% end %>
</div>
