<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :required_level %>
  <%= f.input :required_material %>
  <%= f.input :description %>
  <%= f.input :number_of_players %>
  <%= f.input :status %>
  <%= f.input :date %>
  <%= f.input :time %>
  <%= f.association :place %>
  <%= f.association :sport %>
  <%= f.submit %>
<% end %>
